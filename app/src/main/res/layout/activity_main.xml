<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/circular_image_view"
            android:layout_width="@dimen/circular_image_width"
            android:layout_height="@dimen/circular_image_height"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/circular_image_view1"
            android:layout_width="@dimen/circular_image_width"
            android:layout_height="@dimen/circular_image_height"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/circular_image_view2"
            android:layout_width="@dimen/circular_image_width"
            android:layout_height="@dimen/circular_image_height"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/circular_image_view3"
            android:layout_width="@dimen/circular_image_width"
            android:layout_height="@dimen/circular_image_height"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/circular_image_view4"
            android:layout_width="@dimen/circular_image_width"
            android:layout_height="@dimen/circular_image_height"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/circular_image_width"
            android:layout_height="@dimen/circular_image_height"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic" />

    </LinearLayout>
</layout>
